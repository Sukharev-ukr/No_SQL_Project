<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<VBox alignment="TOP_CENTER" spacing="15" stylesheets="@usermanagement.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Title Label -->
    <Label text="Create new user" styleClass="main-title" />

    <!-- Form Fields Grid -->
    <GridPane alignment="CENTER" hgap="10" vgap="15">
        <children>
            <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Last name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Type of user:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="userTypeComboBox" promptText="Select user type" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="E-mail address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Location/branch:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ComboBox fx:id="locationComboBox" promptText="Select location" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Send password?" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <CheckBox fx:id="sendPasswordCheckbox" text="yes, a password e-mail will be sent to the user" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        </children>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <children>
            <Button fx:id="cancelButton" text="CANCEL" styleClass="cancel-button" />
            <Button fx:id="addUserButton" text="ADD USER" styleClass="add-user-button" />
        </children>
    </HBox>
</VBox>
