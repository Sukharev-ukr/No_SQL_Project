<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15" stylesheets="@usermanagement.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.no_sql_project.Controller.AddEmployeeController">
    <!-- Title Label -->
    <Label styleClass="main-title" text="Create new user" />

    <!-- Form Fields Grid -->
    <GridPane alignment="CENTER" hgap="10" vgap="15">
        <children>
            <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Last name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Type of user:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="userTypeComboBox" promptText="Select user type" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Location/branch:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="locationComboBox" promptText="Select location" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Send password?" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <CheckBox fx:id="sendPasswordCheckbox" text="yes, a password e-mail will be sent to the user" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </children>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <children>
            <Button fx:id="cancelButton" styleClass="cancel-button" text="CANCEL" />
            <Button fx:id="addUserButton" styleClass="add-user-button" text="ADD USER" />
        </children>
    </HBox>
</VBox>
