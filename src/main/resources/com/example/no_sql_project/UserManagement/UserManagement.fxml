<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15" stylesheets="@usermanagement.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.no_sql_project.Controller.EmployeeManagementController">
    <!-- Navigation Bar -->
    <HBox alignment="CENTER" spacing="20" styleClass="nav-bar">
        <children>
            <Button styleClass="nav-button" text="Dashboard" />
            <Button styleClass="nav-button" text="Incident Management" />
            <Button styleClass="nav-button" text="User Management" />
        </children>
    </HBox>

    <!-- Title -->
    <Label styleClass="main-title" text="User management" />

    <!-- Search Bar and Add User Button -->
    <HBox alignment="CENTER" spacing="20">
        <children>
            <TextField fx:id="filterTextField" promptText="Filter by email" styleClass="filter-text-field" />
            <Button fx:id="addUserButton" onAction="#addUser" styleClass="add-user-button" text="+ ADD NEW USER" />
        </children>
    </HBox>

    <!-- User Table -->
    <TableView fx:id="userTable" prefHeight="400" prefWidth="700">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="183.0" text="ID" />
            <TableColumn fx:id="fullNameColumn" prefWidth="238.0" text="Full Name" />
            <TableColumn fx:id="roleColumn" prefWidth="122.0" text="Role" />
            <TableColumn fx:id="ticketsColumn" prefWidth="156.0" text="# tickets" />
        </columns>
    </TableView>
</VBox>
