<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox fx:id="ticketsPane" alignment="TOP_CENTER" prefHeight="536.0" prefWidth="710.0" spacing="20" stylesheets="@overviewtickets.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.no_sql_project.Controller.OverviewTicket">
    <children>
        <Label id="overviewTitle" text="Overview Tickets" />

        <!-- Existing Filter and Create Incident Button Section -->
        <HBox alignment="CENTER" spacing="15">
            <children>
                <TextField fx:id="filterTextField" promptText="Filter by email" />
                <Button fx:id="createIncidentButton" onAction="#switchToCreateIncident" text="CREATE INCIDENT" />
            </children>
        </HBox>

        <!-- New Sorting Controls -->
        <HBox alignment="CENTER" spacing="15">
            <children>
                <Label text="Sort by Priority: " />
                <ChoiceBox fx:id="prioritySortChoiceBox" prefWidth="150">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="High to Low" />
                            <String fx:value="Low to High" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <Button text="Sort" onAction="#handleSortTickets" />
            </children>
        </HBox>

        <!-- TableView for Tickets -->
        <TableView fx:id="ticketsTable" prefHeight="402.0" prefWidth="720.0">
            <columns>
                <TableColumn fx:id="typeColumn" prefWidth="150" text="Type" />
                <TableColumn fx:id="userColumn" prefWidth="150" text="User" />
                <TableColumn fx:id="dateColumn" prefWidth="100" text="Date" />
                <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                <TableColumn fx:id="descriptionColumn" prefWidth="100" text="Description" />
                <TableColumn fx:id="priorityColumn" prefWidth="100" text="Priority" />
            </columns>
        </TableView>
    </children>
</VBox>
