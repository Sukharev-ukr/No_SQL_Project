<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="loginPane" alignment="CENTER" prefHeight="398.0" prefWidth="452.0" spacing="20" stylesheets="@login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.no_sql_project.Controller.LoginController">
    <children>
        <Label id="titleLabel" text="NoDesk: TGG" />
        <Label id="subtitleLabel" contentDisplay="CENTER" text="Please provide login credentials to login to NoDesk for The Garden Group" wrapText="true" />

        <GridPane alignment="CENTER" hgap="10" vgap="15">
            <children>
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameField" text="Douglas Robinson" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" text="kbhgy217" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" />


                <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="Login" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            </children>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </children>
</VBox>
